#sale{
    .weui_navbar{
        padding: 10px 40px;
    }
    .weui_navbar_item{
        border: 1px solid #09bb07;
        color: #09bb07;
        padding: 5px 0;
    }
    .weui_bar_item_on{
        color: #fff;
        background-color: #09bb07;
    }
    .item-left{
        border-right: none;
        border-top-left-radius: 10px;
        border-bottom-left-radius : 10px;
    }
    .item-right{
        border-left: none;
        border-top-right-radius: 10px;
        border-bottom-right-radius : 10px;
    }
    .weui_tab_bd{
        padding-top: 56px;
    }
}
.sale-search{
    padding: 10px 20px;
    select{
        margin: 0 5px;
        width: 85px;
    }
}

.sale-table{
    margin-top: 15px;
    table {
        width: 100%;
        background: #ddd;
        thead {
            th {
                background-color: #4fd04e;
                color: #fff;
            }
        }
        td,th{
            text-align: center;
            line-height: 34px;
            background: #fff;
        }
    }
}
