<!DOCTYPE html>
<html lang="en" ng-app="app">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="/assets/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/assets/admin/css/sb-admin-2.css" rel="stylesheet">
  <link href="/assets/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
  <link href="{{{/css/main.min.css}}}" rel="stylesheet" type="text/css" >
  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>
<body ng-controller="earlyWarnDetailCtrl">
  <div class="container containerWidthAuto">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">基本信息</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <label>预警名称：</label>
              <input type="text" class="form-control" ng-model="name" placeholder="输入预警名称" maxlength="15">
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group">
              <label>显示权重：</label>
              <input type="text" onkeyup="keyUpTwoDecimal(this)" class="form-control" ng-model="num" placeholder="输入显示权重" maxlength="2">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <label>备注：</label>
              <textarea class="form-control" cols="30" rows="10" ng-model="remark" maxlength="150"></textarea>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">预警配置</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-sm-12">
            <div ng-repeat="deploy in deploys track by $index" class="form-inline rowMarginTop">
              <label>配置名称：</label>
              <input type="text" class="form-control" ng-model="deploy.name" placeholder="" maxlength="15">&nbsp;&nbsp;&nbsp;&nbsp;
              <label>配置值：</label>
              <input type="text" class="form-control" onkeyup="keyUpTwoDecimal(this)" ng-model="deploy.value" placeholder="" maxlength="7">&nbsp;&nbsp;&nbsp;&nbsp;
              <label>备注：</label>
              <input type="text" class="form-control" ng-model="deploy.remark" placeholder="" maxlength="50" style="min-width: 300px;">
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <button class="btn btn-lg btn-primary" type="button" ng-click="submitData()">提交</button>
      </div>
    </div>
  </div>
  <script src="/assets/jquery/dist/jquery.min.js"></script>
  <script src="/assets/jquery.nicescroll/jquery.nicescroll.min.js"></script>
  <script src="/assets/angular/angular.min.js"></script>
  <script src="/assets/bootstrap/dist/js/bootstrap.min.js"></script>
  <script src="/assets/layer/layer.js"></script>
  <script src="{{{/js/app.js}}}"></script>
  <script src="{{{/js/earlyWarnDetailCtrl.js}}}"></script>
</body>
</html>