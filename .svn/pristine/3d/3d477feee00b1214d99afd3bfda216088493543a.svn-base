<!DOCTYPE html>
<html lang="en" ng-app="app">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="/assets/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/assets/admin/css/sb-admin-2.css" rel="stylesheet">
    <link href="/assets/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="{{{/css/main.min.css}}}" rel="stylesheet" type="text/css" >
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body ng-controller="airportCheckCtrl">
<div class="container containerWidthAuto">
    <div class="row">
        <div class="col-sm-12">
            <form class="form-inline applyCheckSearch">
                <div class="form-group marginRight5">
                    <label for="search">机场网点名称：</label>
                    <input ng-model="airportName" type="search" class="form-control" id="search" placeholder="输入机场网点名称">
                  </div>
                  <div class="form-group marginRight5">
                    <button id="search" class="btn btn-primary" ng-click="getList()">搜索</button>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" ng-click="addAirport()">新增</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <th>机场网点名称</th>
                    <th>省</th>
                    <th>市</th>
                    <th>区</th>
                    <th>联系人</th>
                    <th>联系人电话</th>
                    <th>创建时间</th>
                    <th>状态</th>
                    <th>操作</th>
                </thead>
                <tbody>
                    <tr ng-repeat="item in list track by $index">
                        <td><a ng-click="updateAirport(item.id)" class="fa" href="javascript:void(0)">{{item.name}}</a></td>
                        <td>{{item.treePath.split(',')[0]}}</td>
                        <td>{{item.treePath.split(',')[1]}}</td>
                        <td>{{item.treePath.split(',')[2]}}</td>
                        <td>{{item.contact}}</td>
                        <td>{{item.mobile}}</td>
                        <td>{{item.createTime | date : 'yyyy-MM-dd HH:mm:ss'}}</td>
                        <td>
                            <label ng-class="{'label-success':!item.isDelete,'label-default':item.isDelete}" class="label">{{item.isDelete ? '禁用' : '启用'}}</label>
                        </td>
                        <td>
                            <button class="btn btn-sm" ng-class="{'btn-danger':!item.isDelete,'btn-success':item.isDelete}" ng-click="airportDisabled(item.id,item.isDelete)">
                                {{item.isDelete ? '启用' : '禁用'}}
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
            <pagination page="page" change="getList(page)"></pagination>
        </div>
    </div>
</div>
<script src="/assets/jquery/dist/jquery.min.js"></script>
<script src="/assets/jquery.nicescroll/jquery.nicescroll.min.js"></script>
<script src="/assets/angular/angular.min.js"></script>
<script src="/assets/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="/assets/layer/layer.js"></script>
<script src="{{{/js/app.js}}}"></script>
<script src="{{{/js/airportCheckCtrl.js}}}"></script>
</body>
</html>
