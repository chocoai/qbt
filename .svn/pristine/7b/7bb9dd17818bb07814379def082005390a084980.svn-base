.my-voucher {
  .weui_tab {
    background-color: #f3f3f3;
    .weui_media_hd.voucher-property {
      width: 100px;
      height: auto;
      //background-color: #15ca5f;
      color: #fff;
      font-size: 14px;
      background-image: url('/img/1.png');
    }
    .weui_media_bd {
      overflow: hidden;
      .weui_media_title.voucher-name {
        font-size: 16px;
      }
      .weui_media_desc.voucher-time {
        font-size: 15px;
        line-height: 20px;
      }
      .weui_media_desc.voucher-count {
        font-size: 14px;
        margin-top: 15px;
        .weui_icon_warn::before {
          font-size: 18px;
          color:#a9a9a9;
        }
      }
    }
    // 立即使用-二维码赠送
    .voucher-use,.voucher-active,.voucher-code {
      width: 70px;
      height: 30px;
      box-sizing: border-box;
      border: 2px solid #15ca5f;
      border-radius: 30px;
      color: #15ca5f;
      text-align: center;
      line-height: 28px;
      font-size: 12px;
    }
    // 激活
    .voucher-active {
      background-color: #15ca5f;
      border-radius: 30px;
      color: #fff;
      margin-bottom: 15px;
    }
  }
}