<!DOCTYPE html>
<html lang="en" ng-app="app">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="/assets/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/assets/admin/css/sb-admin-2.css" rel="stylesheet">
  <link href="/assets/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
  <link href="/assets/bootstrap-datepicker/bootstrap-datepicker.min.css" rel="stylesheet" type="text/css">
  <link href="{{{/css/main.min.css}}}" rel="stylesheet" type="text/css" >
  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>
<body ng-controller="infiniteCheckDetailCtrl">
  <div class="container containerWidthAuto">
    <div class="panel panel-default">
      <div class="panel panel-heading">
        <h3 class="panel-title">基本信息</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <label>券活动名称：</label>
              <input type="text" class="form-control" ng-model="checkName" placeholder="输入券活动名称" maxlength="15">
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group">
              <label>优惠券金额：</label>
              <input type="text" onkeyup="keyUpTwoDecimal(this)" class="form-control" ng-model="check" placeholder="输入优惠券金额" maxlength="5">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <label>活动开始时间：</label>
              <input type="text" class="form-control date-picker" readonly ng-model="startDate" placeholder="选择开始时间">
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group">
              <label>活动结束时间：</label>
              <input type="text" class="form-control date-picker" readonly ng-model="endDate" placeholder="选择结束时间">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <label>券限额金额：</label>
              <input type="text" onkeyup="keyUpTwoDecimal(this)" class="form-control" maxlength="5" ng-model="limitAmount" placeholder="输入券限额金额">
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group">
              <label>券限制天数：</label>
              <input type="text" onkeyup="keyUpTwoDecimal(this)" class="form-control" maxlength="3"  ng-model="limitDate" placeholder="输入券限制天数">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <label>状态：</label>
              <select class="form-control" ng-model="status">
                <option value="1">启用</option>
                <option value="2">禁用</option>
              </select>
            </div>
          </div>
          <!--<div class="col-sm-6">-->
            <!--<div class="form-group">-->
              <!--<label>活动描述：</label>-->
              <!--<textarea cols="30" rows="10" class="form-control" ng-model="remark"></textarea>-->
            <!--</div>-->
          <!--</div>-->
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <div class="form-group">
          <button type="button" class="btn btn-lg btn-primary" ng-click="addCheck()">提交</button>
        </div>
      </div>
    </div>
  </div>
  <script src="/assets/jquery/dist/jquery.min.js"></script>
  <script src="/assets/jquery.nicescroll/jquery.nicescroll.min.js"></script>
  <script src="/assets/angular/angular.min.js"></script>
  <script src="/assets/bootstrap/dist/js/bootstrap.min.js"></script>
  <script src="/assets/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
  <script src="/assets/layer/layer.js"></script>
  <script src="{{{/js/app.js}}}"></script>
  <script src="{{{/js/infiniteCheckDetailCtrl.js}}}"></script>
</body>
</html>